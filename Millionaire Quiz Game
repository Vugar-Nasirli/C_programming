		printf("\nTo use 'Double answer' joker          : 4");
		printf("\n\nPlease, Write your choice : "); scanf("%d", &choice1);
		switch (choice1)
		{
			case 1:
			{
				
				if (joker1>0)
				{
					printf("\n\nYou have already used '50/50' joker, please choose another one !"); goto YesNo10;
				}
