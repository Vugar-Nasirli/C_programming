	untuchable_score:
	system("cls");
	float untuchable_score=(float)countr;
	printf("\n\n\n\t\t********** Sorry, you cannot complete the game **********");
	printf("\n\t\t You won : %.2f AZN", untuchable_score); goto go;
	
	score:
    system("cls");
	float score=(float)countr;
	if(score>0.00 && score<1000000.00)
	{
	   printf("\n\n\t\t**************** CONGRATULATION *****************");
	   printf("\n\t You won %.2f AZN",score);goto go;
	}
	 else if(score>=1000000.00)
	{
	    printf("\n\n\n \t\t**************** CONGRATULATION ****************");
	    printf("\n\t\t\t\t YOU ARE A MILLIONAIRE!!!!!!!!!");
	    printf("\n\t\t You won %.2f AZN",score);
	    printf("\t\t Thank You!!");goto go;
	}
	 else
    {
	 printf("\n\n\t******** SORRY YOU DIDN'T WIN ANY CASH ********");
	    printf("\n\t\t Thanks for your participation");
	    printf("\n\t\t TRY AGAIN");goto go;
	}

	go:
	puts("\n\n Press Y if you want to play next game");
	puts(" Press any key if you want to go main menu");
	if (toupper(getch())=='Y')
		goto home;
	else
		{
		edit_score(score,playername);
		goto mainhome;}}}


	void edit_score(float score, char plnm[20])
	{
	system("cls");
	float sc;
	char nm[20];
	FILE *f;
	f=fopen("The Highest Score.txt","r");
	fscanf(f,"%s%.2f",&nm,&sc);
	if (score>=sc)
	  { 
	    sc=score;
	    fclose(f);
	    f=fopen("The Highest Score.txt","w");
	    fprintf(f,"%s\n%.2f",plnm,sc);
	    fclose(f);
	  }
	}

	void show_record()
    {
	system("cls");
	char name[20];
	float sc;
	FILE *f;
	f=fopen("The Highest Score.txt","r");
	fscanf(f,"%s%f",&name,&sc);
	printf("\n\n\t\t*************************************************************");
	printf("\n\n\t\t %s has scored the Highest Score : %.2f AZN",name,sc);
	printf("\n\n\t\t*************************************************************");
	fclose(f);
	getch();
	}
	
