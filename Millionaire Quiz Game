				else
		       		{printf("\n\nWrong!!! \n*** But You have second chance !!! ***");getch();
		       		goto Answer9;
		       		break;}
			}
			default: printf("Please choose 1, 2 or 3"); goto C19;
		}
		Answer9:
		if (toupper(getch())=='A')
			{printf("\n\nCorrect!!!");countr=countr+(count*9); getch();
			break;}
		else
		       {printf("\n\nWrong!!! The correct answer is A.Copenhagen");getch();
		       goto untuchable_score;
		       break;}

        case 10:
        printf("\n\n\n\n\t\t\tDo you want to take the money and leave ? (Yes=1 or No=0) "); scanf("%d", &yesno);
		if (yesno==1)
		{
			goto score;break;
		}
		else
		printf("\n\n\nWhich is the longest River in the world?");
		printf("\n\nA.Nile\t\tB.Koshi\n\nC.Ganga\t\tD.Amazon");
		YesNo10: printf("\n\nDo you want to use any joker ? (Yes=1 or No=0) : "); scanf("%d", &yesno);
		if (yesno==1)
		{
			goto C110;
		}
		else if (yesno==0) 
		{
			goto Answer10;
		}
		else
