						{
							
							if (joker2>0)
							{
								printf("\n\nYou have already used 'Call a friend' joker, please choose another one !"); goto YesNo11;
							}
							else
							joker2++;
							C211:
							printf("\n\nYou have 3 friends : Dad, Teacher, Doctor");
