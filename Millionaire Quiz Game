				{
					printf("\n\nYou have already used 'Call a friend' joker, please choose another one !"); goto YesNo10;
				}
				else
				joker2++;
				C210:
				printf("\n\nYou have 3 friends : Dad, Teacher, Doctor");
				printf("\n\nDAD     : 1");
				printf("\n\nTEACHER : 2");
				printf("\n\nDOCTOR  : 3");
				printf("\n\nPlease, Write your choice : "); scanf("%d", &choice2);
				switch (choice2)
				{
					case 1:
					{
						printf("My dear, i guess write answer is B"); break;
					}
					case 2:
					{
						printf("My student, i guess write answer is D"); break;
					}
					case 3:
					{
						printf("If i am not mistaken, right answer is A"); break;
					}
					default: printf("Please choose 1, 2 or 3"); goto C210; 
				}
				break;
			}
			case 3:
			{
				
				if (joker3>0)
				{
					printf("\n\nYou have already used 'Help from the audience' joker, please choose another one !"); goto YesNo10;
				}
				else
				joker3++;
				printf("\n\nA. 60 percent\t\tB. 5 percent\n\nC. 15 percent\t\tD. 20 percent");
				break;
			}
			case 4:
			{
				
				if (joker4>0)
				{
					printf("\n\nYou have already used 'Double Answer' joker, please choose another one !"); goto YesNo10;
				}
				else
				joker4++;
				if (toupper(getch())=='A')
					{printf("\n\nCorrect!!!");countr=countr+(count*10);getch(); goto score; break;}
				else
		       		{printf("\n\nWrong!!! \n**** But You have second chance !!! ***");getch();
			   		break;
			   		goto Answer10;}
			}
			default: printf("Please choose 1, 2, 3 or 4"); goto C110;
		}
		Answer10:
		if (toupper(getch())=='A')
			{
				printf("\n\nCorrect!!!");countr=countr+(count*10);getch();
				printf("\n\n\t\t\t*** Your money : %d ***", countr);
				printf("\n\n***** Do you want to play 'BIG RISK' ?! (Yes=1 or No=0) ***** "); scanf("%d", &yesno);
				if (yesno==1)
				{
					system("cls");
					printf("\n\n\t\t\t*** Welcome to THE BIG RISK ***");
					printf("\n\n\nWhat is the color of the Black Box in aeroplanes?");
					printf("\n\nA.White\t\tB.Black\n\nC.Orange\t\tD.Red");
					YesNo11: printf("\n\nDo you want to use any joker ? (Yes=1 or No=0) : "); scanf("%d", &yesno);
					if (yesno==1)
					{
						goto C111;
					}
					else if (yesno==0) 
					{
						goto Answer11;
					}
